pipeline{
    //Directives
    agent any
    tools {
        maven'Maven'

    }

    stages {
    // specify various stages

    //stage 1. Build
     stage ('Build'){
        steps {
            sh 'mvn clean install package'
        }
    }

    //stage 2. Testing
    stage ('Test'){
        steps{
            echo 'tesing'
        }
    }
    //stage 3 : publish artifacts to Nexus
    stage ('public to nexus'){
        steps{
            nexusArtifactUploader artifacts: [[artifactId: 'ShivamDevOpsLab', classifier: '', file: 'target/ShivamDevOpsLab-0.0.5-snapshot.war', type: 'war']], credentialsId: '127165bc-91e4-452e-90ba-a832bed5aca4', groupId: 'com.Shivamdevopslab', nexusUrl: '172.20.10.232:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'Shivamdevopslab-snapshot', version: '0.0.5-snapshot'
        }
    }

    //stage 3 : Deploying
    stage('Deploy'){
        steps{
            echo 'deploying'
        }

    }

    }

}
